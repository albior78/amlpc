    <section>
        <div class="container-fluid">
            <div class="row">
                <div id="carousel-homepage" class="carousel slide" data-ride="carousel" >
                    <ol class="carousel-indicators">
                        {% for carouselhome in carouselhomes %}
                        {% if loop.index == 1 %}
                        <li data-target="#carousel-homepage" data-slide-to="{{ loop.index }}" class="active"></li>
                        {% else %}
                        <li data-target="#carousel-homepage" data-slide-to="{{ loop.index }}"></li>
                        {% endif %}
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                    {% for carouselhome in carouselhomes %}
                        {% if loop.index == 1 %}
                        <div class="carousel-item active" data-interval="7000">
                        {% else %}
                        <div class="carousel-item" data-interval="7000">
                        {% endif %}           
                            <img class="d-block w-100" src="{{ asset('upload/images/' ~ carouselhome.imageFilename) }}" alt="AML-PC DEVELOPMENT">
                            <div class="carousel-caption d-none d-md-block text-light">
                                {% if carouselhome.titre is defined and carouselhome.titre is not null %}
                                <h5 class="carouselhometitre">{{ carouselhome.titre|raw }}</h5>
                                {% endif %}
                                {% if carouselhome.texte is defined and carouselhome.texte is not null %}
                                <p class="carouselhometexte">{{ carouselhome.texte|raw }}</p>
                                {% endif %}
                            </div>
                        </div>    
                    {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carousel-homepage" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-homepage" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    </div>
                </div>
            </div>
