{% extends 'base.html.twig' %}

{% block title %}MESSAGE{% endblock %}

{% block body %}
<main>
    <section>
        <div class="container-fluid">
            {% for label, messages in app.flashes(['warning']) %}
            {% for message in messages %}
            <div class="alert alert-{{ label }} text-center col-md-5 mx-auto">
                {{ message }}
            </div>
            {% endfor %}
            {% endfor %}
            <div class="row">
                <form method="POST" class="col-12 col-lg-4 offset-lg-4">
                    <div class="col-12 form-group">
                        <div class="py-2">
                            <input type="text" name="nom" class="form-control" id="forminput1" placeholder="Votre Nom">
                        </div>
                        <div class="py-2">
                            <input type="text" name="prenom" class="form-control" id="forminput2" placeholder="Votre Prénom">
                        </div>
                        <div class="py-2">
                            <input type="email" name="email" class="form-control" id="forminput3" placeholder="Votre email">
                        </div>
                        <div class="py-2">
                            <input type="text" name="tel" class="form-control" id="forminput4" placeholder="Votre n° de téléphone pour vous recontacter, pas obligatoire.">
                        </div>
                        <div class="py-2">
                            <label>Votre message</label>
                            <textarea id="formtextarea" class="form-control" name="question" rows="10"></textarea>
                        </div>
                        <div class="py-2">
                            <button type="submit" class="btn btn-dark text-white">Envoyer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
{% endblock %}
